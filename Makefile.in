		CONTINUOUS_BUILD_MARK=$(CONTINUOUS_BUILD_MARK) \
		BBFLAGS='$(BBFLAGS)' \
		INSTALLSINCE=$(INSTALLSINCE) \
		installnew \
		INSTALLDIR=$(INSTALLDIR)/$(1) # target installnew for $(1)
